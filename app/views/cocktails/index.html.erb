<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">

      <h1>All Cocktails</h1>
      <br>
      <%= link_to '+ add a cocktail', new_cocktail_path, class: 'btn btn-primary' %>
      <br><br>

      <div class="cards">
        <% @cocktails.each do |cocktail| %>
        <div id="cardholders" class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/dinner.jpg)">
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
        </div>
        <% end %>
      </div>

    </div>
  </div>
</div>


