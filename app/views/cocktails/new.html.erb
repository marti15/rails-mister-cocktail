<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">

      <h1>Create a new cocktail...</h1>
      <br><br>
      <%= simple_form_for @cocktail do |f| %>
      <%= f.input :name %>
      <%= f.submit class: 'btn btn-primary' %>
      <% end %>
      <br>
      <%= link_to "Back to list", cocktails_path, class: 'btn btn-secondary btn-sm' %>

    </div>
  </div>
</div>
