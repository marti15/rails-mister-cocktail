<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">

      <h1><%= @cocktail.name %></h1>
      <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
      <br>
      <h3>Recipe</h3>
      <% @cocktail.doses.each do |dose| %>
        <%= dose.description %>
        <%= dose.ingredient.name %>
        <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-secondary btn-sm' do %>
          <i class="fa fa-trash destroy_dose"></i>
        <% end %>
        <br>
      <% end %>
      <br>

      <% # /cocktails/:coktail_id/doses %>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description %>
        <%= f.association :ingredient %>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
      <br>
      <%= link_to "Back to list", cocktails_path, class: 'btn btn-secondary btn-sm' %>

    </div>
  </div>
</div>
